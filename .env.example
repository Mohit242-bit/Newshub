# NewsHub API Configuration
# Copy this file to .env and add your actual API keys

# Get your Guardian API key from: https://open-platform.theguardian.com/access/
GUARDIAN_API_KEY=your_guardian_api_key_here

# Get your NewsAPI key from: https://newsapi.org/register
NEWSAPI_ORG_KEY=your_newsapi_key_here

# Base URLs (usually don't need to change these)
GUARDIAN_API_BASE_URL=https://content.guardianapis.com
NEWSAPI_ORG_BASE_URL=https://newsapi.org/v2
DEVTO_API_BASE_URL=https://dev.to/api
HACKERNEWS_API_BASE_URL=https://hacker-news.firebaseio.com/v0

# Cache settings
CACHE_DURATION_MINUTES=30
MAX_ARTICLES_PER_CATEGORY=20

# NewsHub Environment Variables

# API Keys (Register at the respective platforms)
GUARDIAN_API_KEY=your_guardian_api_key_here
NEWS_API_KEY=your_newsapi_key_here

# API Base URLs (Don't change these)
GUARDIAN_BASE_URL=https://content.guardianapis.com
NEWSAPI_BASE_URL=https://newsapi.org/v2
HACKER_NEWS_BASE_URL=https://hacker-news.firebaseio.com/v0

# App Configuration
APP_NAME=NewsHub
VERSION=1.0.0
ENVIRONMENT=development

# Rate Limiting Settings
GUARDIAN_REQUESTS_PER_DAY=12000
NEWSAPI_REQUESTS_PER_DAY=1000
DEFAULT_REQUEST_INTERVAL_MS=1000

# Local Settings
DEFAULT_COUNTRY=in
DEFAULT_LANGUAGE=en
ARTICLES_CACHE_LIMIT=1000
OFFLINE_ARTICLES_LIMIT=100
